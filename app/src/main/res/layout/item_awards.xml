<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimens_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_10dp"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:layout_marginEnd="@dimen/dimens_10dp"
            app:cardCornerRadius="@dimen/dimens_10dp"
            app:cardElevation="@dimen/dimens_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgAward"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_150dp" />

                <TextView
                    android:id="@+id/tvAwardPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imgAward"
                    android:layout_margin="@dimen/dimens_5dp"
                    android:background="@drawable/small_rounded_grey_trans"
                    android:paddingStart="@dimen/dimens_10dp"
                    android:paddingTop="@dimen/dimens_5dp"
                    android:paddingEnd="@dimen/dimens_10dp"
                    android:paddingBottom="@dimen/dimens_5dp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    tools:text="100.000 Point" />

                <TextView
                    android:id="@+id/tvAwardType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/dimens_5dp"
                    android:background="@drawable/small_rounded_blue"
                    android:paddingStart="@dimen/dimens_10dp"
                    android:paddingTop="@dimen/dimens_5dp"
                    android:paddingEnd="@dimen/dimens_10dp"
                    android:paddingBottom="@dimen/dimens_5dp"
                    android:textColor="@color/colorWhite"
                    tools:text="Vouchers" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvAwardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_10dp"
            android:textColor="@color/darkGrey"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Gift Card IDR 200.000"/>
    </LinearLayout>
</RelativeLayout>